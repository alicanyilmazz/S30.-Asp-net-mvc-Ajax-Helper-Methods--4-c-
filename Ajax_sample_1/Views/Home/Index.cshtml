
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Ajax.ActionLink("Upload Data", "LoadData", null, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "catchdata", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading_bar", LoadingElementDuration = 300 }, new { @class = "btn btn-success" })

<hr />

<div id="loading_bar" class="alert alert-warning" style="display:none;">
    Loading...
</div>
<ul id="catchdata" class="list-group"></ul>























